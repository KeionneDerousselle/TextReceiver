<UserControl x:Class="TextReceiver.Views.common.Avatar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TextReceiver.Views.common"
             mc:Ignorable="d">
    <Rectangle 
                    RadiusX="5"
                    RadiusY="5"
                    Width="30"
                    Height="30"
                    HorizontalAlignment="Left"
                    Margin="5,5,10,5"
                    VerticalAlignment="Top">
        <Rectangle.Fill>
            <ImageBrush 
                            x:Name="userImage"
                            ImageSource="../../Content/Images/cat-scared.jpg"></ImageBrush>
        </Rectangle.Fill>
    </Rectangle>
</UserControl>
