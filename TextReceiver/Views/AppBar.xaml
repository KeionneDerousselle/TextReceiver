<UserControl x:Class="TextReceiver.Views.AppBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TextReceiver.Views"
             mc:Ignorable="d" 
             d:DesignWidth="600" Background="Black">
    <StackPanel Orientation="Horizontal">
        <Button Width="60" Height="20" Content="New Message" FontSize="8" Margin="10"></Button>
        <Button x:Name="userMenu" Click="Expand_User_Menu" HorizontalAlignment="Right" ContextMenuService.IsEnabled="false"  Width="40" Background="Transparent" BorderThickness="0">
            <Button.Content>
                <Image Source="../Content/Images/cat-scared.jpg"></Image>
            </Button.Content>
            <Button.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Available"></MenuItem>
                    <MenuItem Header="Unavailable"></MenuItem>
                    <MenuItem Header="Do Not Disturb"></MenuItem>
                </ContextMenu>
            </Button.ContextMenu>
        </Button>
        <Button>Conversations</Button>
        <Button>Contacts</Button>
    </StackPanel>
</UserControl>
